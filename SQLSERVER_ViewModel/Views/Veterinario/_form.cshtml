@model Veterinario

<div asp-validation-summary="All" class="text-danger"></div>

<div class="mb-3">
    <label asp-for="Nome" class="form-label"></label>
    <input asp-for="Nome" class="form-control"/>
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Especialidade" class="form-label"></label>
    <input asp-for="Especialidade" class="form-control"/>
    <span asp-validation-for="Especialidade" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="ContratoTrabalho.DataContratacao" class="form-label"></label>
    <input asp-for="ContratoTrabalho.DataContratacao" class="form-control"/>
    <span asp-validation-for="ContratoTrabalho.DataContratacao" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="ContratoTrabalho.Tipo" class="form-label"></label>
    <select asp-for="ContratoTrabalho.Tipo" class="form-control" asp-items="@Html.GetEnumSelectList<TipoContrato>()">
        <option>Selecione</option>
    </select>
    <span asp-validation-for="ContratoTrabalho.Tipo" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="ContratoTrabalho.Valor" class="form-label"></label>
    <input asp-for="ContratoTrabalho.Valor" class="form-control"/>
    <span asp-validation-for="ContratoTrabalho.Valor" class="text-danger"></span>
</div>
