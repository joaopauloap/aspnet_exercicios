@page
@using ProjetoBanco.Models
@using projeto_identity.Areas.Identity.Pages.Account
@model RegisterModel

@{
    ViewData["Title"] = "ASPBank - Cadastrar";
}


<div class="mask d-flex align-items-center h-600 gradient-custom-3">
    <div class="container h-600">
        <div class="row d-flex justify-content-center align-items-center h-600">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <h2 class="text-uppercase text-center mb-1">Crie sua conta</h2>
                            <p class="text-center">Crie agora sua conta e entre para um dos maiores bancos da América Latina. Venha ser ASPBank!</p>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-outline mb-3">
                                <label asp-for="Input.Nome"></label>
                                <input asp-for="Input.Nome" class="form-control" />
                                <span asp-validation-for="Input.Nome" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-3">
                                <label asp-for="Input.DataNascimento"></label>
                                <input asp-for="Input.DataNascimento" class="form-control" />
                                <span asp-validation-for="Input.DataNascimento" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-3">
                                <label asp-for="Input.Cpf"></label>
                                <input asp-for="Input.Cpf" class="form-control" id="campoCpf" />
                                <span asp-validation-for="Input.Cpf" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-3">
                                <label asp-for="Input.Endereco"></label>
                                <input asp-for="Input.Endereco" class="form-control" />
                                <span asp-validation-for="Input.Endereco" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-3">
                                <label asp-for="Input.Telefone"></label>
                                <input asp-for="Input.Telefone" class="form-control" />
                                <span asp-validation-for="Input.Telefone" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-3">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-3">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-3">
                                <label asp-for="Input.ConfirmPassword"></label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label asp-for="Input.Tipo" class="form-label"></label>
                                <select asp-for="Input.Tipo" class="form-control" asp-items="@Html.GetEnumSelectList<TipoConta>()">
                                    <option value=""> Selecione</option>
                                </select>
                                <span asp-validation-for="Input.Tipo" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-center text-white">
                                <input type="submit" value="Cadastrar" class="btn btn-warning btn-block btn-lg gradient-custom-4 text-white" />
                            </div>
                        </form>
                        <p class="text-center mt-5 mb-0">
                            Já possui uma conta? <a asp-area="Identity" asp-page="/Account/Login" class="fw-bold text-body"><u>Clique aqui para Entrar</u></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>ErroValidacaoCpf()</script>
}


